{{#if this}}
    <ul>
        {{#each this}}
            <li>
                <a href="/store/{{ coordinates }}" class="item-link item-content">
                    <div class="item-media">
                        <img src="{{ logo }}" alt="logo" width="40px">
                    </div>
                    <div class="item-inner">
                        <div class="item-title">
                            <div class="item-header">
                                {{ name }}
                            </div>
                            | {{ location }}
                            <div class="item-footer">{{ telephone }}</div>
                        </div>
                        <div class="item-after">
                            <span class="badge color-blue">open</span>
                        </div>
                    </div>
                </a>
            </li>
        {{/each}}
    </ul>
{{/if}}